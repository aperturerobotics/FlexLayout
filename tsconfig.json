{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "stripInternal": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "typedoc"]
}
